<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/constraint_bg"
    android:padding="16dp">

    <TextView
        android:id="@+id/textConstraint"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Hallo, Mobile Programming ðŸ‘‹"
        android:textColor="@color/text_dark"
        android:textSize="22sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnConstraintClick"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:text="Klik Saya"
        android:backgroundTint="@color/btn_color"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/textConstraint"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <ImageView
        android:id="@+id/imageAndroid"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_android"  <!-- gunakan icon android -->
    android:contentDescription="Android Icon"
    app:layout_constraintTop_toBottomOf="@id/btnConstraintClick"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/editTextName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Masukkan Nama Anda"
        android:inputType="textPersonName"
        android:textColorHint="#888"
        app:layout_constraintTop_toBottomOf="@id/imageAndroid"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>